@model Shopping.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<flash dismissable="true" />
<div class="row mt-5">
    <div class="col-md-4 offset-4">
        <div class="card bg-light mb-3" style="width: 450px; height: 450px">
            <h5 class="card-header bg-dark text-center text-white"><i class="fa-solid fa-key"></i> Recuperar Contraseña</h5>
            <div class="card-body bg-light">
                <h3 class="text-center mt-3">Recuperación de Constraseña</h3>

                
                        <form method="post">
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="form-group mt-2">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-warning"></span>
                            </div>

                            <div class="form-group mt-4 text-center">
                                <input type="submit" value="Recuperar Contraseña" class="btn btn-outline-primary" />
                                <a asp-action="Login" class="btn btn-outline-success">Regresar</a>
                            </div>
                        </form>
                        <div class="text-success">
                            <p>
                                @ViewBag.Message
                            </p>
                        </div>
                    </div>
              
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
